LLM_MODEL="gpt-4o"
USE_AZURE=false

# Azure OpenAI設定（USE_AZURE=trueの場合に使用）
AZURE_ENDPOINT=
AZURE_OPENAI_API_DEPLOYMENT_ID=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_API_VERSION="2024-10-21"

# OpenAI設定（USE_AZURE=falseの場合に使用）
OPENAI_API_KEY=

# チェックポインター設定
# SQLite (デフォルト) または PostgreSQL を選択
CHECKPOINT_TYPE=sqlite
# CHECKPOINT_TYPE=postgres

# PostgreSQL設定 (CHECKPOINT_TYPE=postgres の場合に使用)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=langgraph
POSTGRES_USER=langgraph_user
POSTGRES_PASSWORD=langgraph_password
